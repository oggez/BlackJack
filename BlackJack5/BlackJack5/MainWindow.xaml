<Window x:Class="BlackJack5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack5"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080">
    <Window.Resources>
        <BitmapImage x:Key="SpriteImage" UriSource="images/cards.png"/>
    </Window.Resources>
    <Grid Background="#FF0E8D01">
        <Image Source="images/Cardback.png" Margin="862,50,50,412"/>
        <Button x:Name="btnStand" Content="STAND" HorizontalAlignment="Left" Margin="415,621,0,0" VerticalAlignment="Top" Width="123" Height="41" Click="btnStand_Click"/>
        <Button x:Name="btnHit" Content="HIT" HorizontalAlignment="Left" Margin="618,621,0,0" VerticalAlignment="Top" Width="122" Height="41" Click="btnHit_Click"/>
        <Button x:Name="btnNewGame" Content="NEW GAME" HorizontalAlignment="Left" Margin="31,621,0,0" VerticalAlignment="Top" Width="123" Height="41" Click="btnNewGame_Click"/>
        <Image x:Name="PlayerCard1" Margin="415,351,497,111"/>
        <Image x:Name="PlayerCard2" Margin="445,351,467,111"/>
        <Image x:Name="DealerCard1"  Margin="415,50,497,412"/>
    </Grid>
</Window>
